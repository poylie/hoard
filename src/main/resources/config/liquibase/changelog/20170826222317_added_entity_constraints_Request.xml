    <!--
        Added the constraints for entity Request.
    -->
    <changeSet id="20170826222317-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="requestor_id"
                                 baseTableName="request"
                                 constraintName="fk_request_requestor_id"
